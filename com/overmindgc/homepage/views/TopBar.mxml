<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:mx="library://ns.adobe.com/flex/mx" 
				   width="100%" height="25" 
				   xmlns:comps="com.overmindgc.homepage.views.comps.*"
				   borderVisible="false"
				   backgroundColor="0x000000"
				   backgroundAlpha="0.6">
	<fx:Script>
		<![CDATA[
			
		]]>
	</fx:Script>
	<s:layout>
		<s:BasicLayout />
	</s:layout>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<comps:NowTime id="nowTime" 
				   x="{(this.width - nowTime.width) / 2}"
				   y="0"/>
	<s:Image id="imgSg"
			 x="5"
			 y="{(this.height - imgSg.height) / 2}"
			 source="@Embed('assets/images/connection.png')"/>
	<s:Label id="labName"
			 x="40"
			 y="{(this.height - labName.height) / 2}"
			 text="overmindgc"
			 fontWeight="bold"
			 color="0xffffff"
			 />
	<s:Image id="imgBattery"
			 x="{this.width - imgBattery.width - 5}"
			 y="{(this.height - imgBattery.height) / 2}"
			 source="@Embed('assets/images/battery.png')"/>
</s:BorderContainer>
